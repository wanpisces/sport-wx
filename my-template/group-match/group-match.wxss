@import "/libs/icon.wxss";

.badminton-all {
  width: 710rpx;
  height: 339rpx;
  background: rgba(255, 255, 255, 1);
  border: 1rpx solid rgba(237, 237, 237, 1);
  box-shadow: 0px 8rpx 8rpx rgba(0, 0, 0, 0.11);
  border-radius: 6rpx;
  margin: 0 auto;
  display: flex;
  justify-content: space-around;
  margin-top: 30rpx;
  box-sizing: border-box;
}

.badminton-all:last-child {
  margin-bottom: 50rpx;
}

.badminton-left, .badminton-right {
  width: 35%;
}

.badminton-image {
  height: 137rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.badminton-image image {
  width: 84rpx;
  height: 84rpx;
  border-radius: 50%;
}

.badminton-center {
  width: 30%;
}

.badminton-center .title {
  font-size: 40rpx;
  line-height: 137rpx;
  font-weight: 600;
  color: #353535;
  text-align: center;
}

.badminton-container {
  font-size: 24rpx;
  line-height: 46rpx;
  margin: 0 10rpx;
  display: flex;
  align-items: center;
}

.badminton-text .text {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.badminton-text .badminton-title {
  font-size: 28rpx;
  color: #101010;
  justify-content: center;
  text-align: center;
  margin: 0 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.active-space {
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 28rpx;
  color: #d6d6d6;
  padding-left: 20rpx;
}
