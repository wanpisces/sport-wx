.item {
  display: flex;
  flex-flow: column;
  padding: 30rpx 0;
  margin: 0 5rpx;
  border-bottom: 1rpx solid #f2f2f2;
}

.item  .topview {
  display: flex;
  flex-flow: row column;
  align-items: center;
  position: relative;
}

.item  .topview .layer {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  width: 740rpx;
}

.item  .topview .layer .userImg {
  width: 82rpx;
  height: 82rpx;
  background: #f4f4f4;
  border-radius: 50%;
  margin-left: 15rpx;
}

.item  .topview .layer .nameAndTime {
  display: flex;
  flex-flow: column;
  margin-left: 13rpx;
  justify-content: space-between;
  align-items: flex-start;
  flex-grow: 1;
  height: 82rpx;
}

.item  .topview .layer .nameAndTime .name {
  max-width: 450rpx;
  font-size: 28rpx;
  color: #2b79b5;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item  .topview .layer .nameAndTime .time {
  font-size: 22rpx;
  color: #999;
}

.item  .topview .layer .commentZan {
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: flex-end;
  margin: 0;
  padding: 10rpx 14rpx;
  background: #fff;
  border-radius: 0;
}

.item  .topview .layer .commentZan::after {
  border: 0;
}

.item  .topview .layer .commentZan image {
  width: 28rpx;
  height: 28rpx;
}

.item  .topview .layer .hoverClass {
  background: #f8f8f8;
}

.item  .topview .layer .commentZan .num {
  font-size: 24rpx;
  color: #bcbcbc;
  margin-left: 8rpx;
  line-height: 1;
}

.item  .topview .layer .more {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  margin: 0 14rpx 0 0;
  padding: 12rpx 14rpx 8rpx 14rpx;
  border-radius: 0;
  background: #fff;
  line-height: 1;
}

.item  .topview .layer .more::after {
  border: 0;
}

.item  .topview .layer .more .hoverClass2 {
  background: #f8f8f8;
}

.item  .topview .layer .more  .huifu {
  color: #999;
  font-size: 24rpx;
  line-height: 1;
}

