.item .bottomView {
  font-size: 28rpx;
  color: #353535;
  margin: 15rpx 68rpx 0 110rpx;
  word-break:break-all; 
}

.item .huifuView {
  display: flex;
  flex-flow: column;
  background: #f2f2f2;
  margin: 15rpx 68rpx 0 110rpx;
  padding: 10rpx 0;
}

.item .huifuView .huifuItem {
  font-size: 26rpx;
  color: #353535;
  padding: 10rpx;
}

.item .huifuView .lookMore {
  font-size: 24rpx;
  color: #b7b7b7;
  padding: 10rpx;
  margin: 0;
  border-radius: 0;
  background: #f2f2f2;
  line-height: 1;
  text-align: left;
  width: auto;
}

.item .huifuView .lookMoreHove {
  background: #f8f8f8;
}

.item .huifuView .lookMore::after {
  border: 0;
  width: auto;
}

.item .huifuView .lookMore text {
  font-size: 24rpx;
  color: #2ea3fc;
}
