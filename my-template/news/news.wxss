/* 首页资讯item公共样式 */

.news_item1, .news_item2 {
  display: flex;
  flex-flow: column;
  /* border-top: 20rpx solid #f2f2f2; */
  border-top: 1rpx solid #f2f2f2;
  padding: 25rpx 15rpx 25rpx 15rpx;
  background: #fff;
}

.news_item1 .title, .news_item2 .top_view .left_view .title {
  font-size: 34rpx;
  color: #353535;
  line-height: 50rpx;
  font-weight: 500;
  overflow: hidden;
  text-overflow: ellipsis;
  display: box;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.news_item1 .view_buttom, .news_item2 .top_view .left_view .view_buttom {
  margin-top: 30rpx;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
}

.news_item1 .view_buttom .top,
.news_item2 .top_view .left_view .view_buttom .top {
  flex-grow: 0;
  flex-shrink: 0;
  font-size: 24rpx;
  /* border: 1rpx solid #f00; */
  padding: 1rpx 4rpx;
  border-radius: 5rpx;
  color: #0eb6eb;
  font-weight: 500;
  /*border: 1rpx solid #f00;*//*border-radius: 5rpx;*/
  margin-right: 17rpx;
}

.news_item1 .view_buttom .source,
.news_item2 .top_view .left_view .view_buttom .source {
  flex-grow: 1;
  flex-shrink: 1;
  font-size: 24rpx;
  vertical-align: middle;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.news_item1 .view_buttom .comment,
.news_item2 .top_view .left_view .view_buttom .comment {
  flex-grow: 0;
  flex-shrink: 0;
  margin-left: 30rpx;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  vertical-align: middle;
}

.news_item1 .view_buttom .comment image,
.news_item2 .top_view .left_view .view_buttom .comment image {
  width: 26rpx;
  height: 24rpx;
}

.news_item1 .view_buttom .comment text,
.news_item2 .top_view .left_view .view_buttom .comment text {
  margin-left: 10rpx;
  font-size: 24rpx;
  color: #999;
  vertical-align: middle;
}

.news_item1 .view_buttom  .read,
.news_item2 .top_view .left_view .view_buttom .read {
  flex-grow: 0;
  flex-shrink: 0;
  margin-left: 32rpx;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  vertical-align: middle;
}

.news_item1 .view_buttom .read image,
.news_item2 .top_view .left_view .view_buttom .read image {
  width: 26rpx;
  height: 26rpx;
}

.news_item1 .view_buttom .read text,
.news_item2 .top_view .left_view .view_buttom .read text {
  /* margin-left: 10rpx; */
  font-size: 24rpx;
  color: #999;
  vertical-align: middle;
}

/* —————————————————————— */

/* 无图和大图资讯item */

.news_item1 .bigImage {
  margin-top: 30rpx;
  width: 710rpx;
  height: 320rpx;
  border-radius: 4rpx;
}

.news_item1 .view_buttom .time {
  margin-left: 32rpx;
  flex-grow: 0;
  flex-shrink: 0;
  font-size: 24rpx;
  color: #999;
  vertical-align: middle;
  overflow: hidden;
  text-overflow: ellipsis;
  display: box;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

/* —————————————————————— */

/* 小图资讯item */

.news_item2 .top_view {
  display: flex;
  flex-flow: row nowrap;
}

.news_item2 .top_view .bigImage {
  margin-right: 35rpx;
  width: 220rpx;
  height: 150rpx;
  border-radius: 4rpx;
  flex-grow: 0;
  flex-shrink: 0;
}

.news_item2 .top_view .left_view {
  display: flex;
  flex-flow: column;
  justify-content: space-between;
  flex-grow: 1;
  flex-shrink: 1;
}

.news_item2  .time {
  margin-top: 10rpx;
  margin-left: 32rpx;
  flex-grow: 1;
  flex-shrink: 1;
  font-size: 22rpx;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  display: box;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

