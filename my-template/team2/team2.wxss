@import "/libs/icon.wxss";

.team-content {
  padding: 0 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 180rpx;
  width: 750rpx;
  box-sizing: border-box;
  flex-grow: 0;
  flex-shrink: 0;
  transition: all 0.5s;
  -webkit-transition: all 0.5s;
  background: rgba(255, 255, 255, 1);
  border: 1rpx solid rgba(237, 237, 237, 1);
  border-right: none;
  box-shadow: 0px 4rpx 4rpx rgba(0, 0, 0, 0.11);
  border-radius: 10rpx 0 0 10rpx;
}

.team-content-other {
  margin: 0 30rpx;
  padding: 0 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 180rpx;
  width: 690rpx;
  box-sizing: border-box;
  flex-grow: 0;
  flex-shrink: 0;
  background: rgba(255, 255, 255, 1);
  border: 1rpx solid rgba(237, 237, 237, 1);
  box-shadow: 0px 4rpx 4rpx rgba(0, 0, 0, 0.11);
  border-radius: 6rpx;
}

.team-left {
  position: relative;
  display: flex;
  flex-direction: row;
  flex-grow: 1;
  flex-shrink: 1;
}

.team-left image {
  width: 140rpx;
  height: 140rpx;
}

.team-left-text {
  margin-left: 30rpx;
  max-width: 400rpx;
}

.team-name {
  /* position: relative; */
  display: flex;
  flex-flow: row nowrap;
  margin: 12rpx 0 10rpx 0;
  max-width: 400rpx;
  padding-right: 75rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  font-size: 32rpx;
  color: #353535;
}

.team-dynamic {
  font-size: 24rpx;
  color: #666;
  margin: 5rpx 0 10rpx 0;
}

.team-adress {
  font-size: 24rpx;
  color: #666;
}

.team-lable {
  /* position: absolute; *//* left: 0;
  top: 0; */
  padding: 0rpx 8rpx;
  height: 30rpx;
  line-height: 28rpx;
  margin-left: 8rpx;
  text-align: center;
  font-size: 22rpx;
  border-radius: 2px;
  color: #282828;
  /* background: #282828; */
  border: 1rpx solid #ffd100;
}

.goToImg {
  width: 34rpx;
  height: 34rpx;
  padding: 0 20rpx 0 6rpx;
}

.ck-box {
  width: 44rpx;
  height: 44rpx;
  padding: 15rpx;
  margin: 0 0 0 20rpx;
  transform: translateX(-94rpx);
  transition: all 0.5s;
  -webkit-transition: all 0.5s;
  -webkit-transform: translateX(-94rpx);
}

.ck-box image {
  width: 44rpx;
  height: 44rpx;
}

.item-view-content {
  display: flex;
}

.item-view {
  width: 100%;
  height: 200rpx;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  margin-bottom: 10rpx;
  white-space: nowrap;
  overflow: hidden;
}

.team-share {
  width: 176rpx;
  height: 180rpx;
  background-color: #292524;
  line-height: 60rpx;
  border-radius: 0 10rpx 10rpx 0;
}

.team-share::after {
  border: none;
}
