.commentList .item .bottomView {
  font-size: 28rpx;
  color: #353535;
  margin: 15rpx 68rpx 0 110rpx;
}

.commentList .item .huifuView {
  display: flex;
  flex-flow: column;
  background: #f2f2f2;
  margin: 15rpx 68rpx 0 110rpx;
  padding: 10rpx 0;
}

.commentList .item .huifuView .huifuItem {
  font-size: 26rpx;
  color: #353535;
  padding: 10rpx;
}

.commentList .item .huifuView .lookMore {
  font-size: 24rpx;
  color: #b7b7b7;
  padding: 10rpx;
  margin: 0;
  border-radius: 0;
  background: #f2f2f2;
  line-height: 1;
  text-align: left;
  width: auto;
}

.commentList .item .huifuView .lookMoreHove {
  background: #f8f8f8;
}

.commentList .item .huifuView .lookMore::after {
  border: 0;
  width: auto;
}

.commentList .item .huifuView .lookMore text {
  font-size: 24rpx;
  color: #2ea3fc;
}

.comment {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  position: fixed;
  z-index: 1000;
  bottom: 0;
  width: 100%;
  height: 126rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0 -2rpx 0 #f2f2f2;
  box-sizing: border-box;
}

.commentBg {
  background: #f4f4f4;
}

.comment .commentInput {
  margin: 22rpx 25rpx 22rpx 15rpx;
  padding: 15rpx;
  flex-grow: 1;
  background: #f4f4f4;
  border-radius: 10rpx;
}

.comment .inputBg {
  background: #fff;
}

.comment .placeHolderStyle {
  font-size: 28rpx;
  color: #bdbdbd;
}

.comment .authorizeView1 {
  flex-shrink: 0;
  flex-grow: 0;
}

.comment .authorizeView1 .bnt {
  padding: 16rpx 25rpx;
  margin: 0;
  border-radius: 0;
  background: #fff;
  line-height: 1;
}

.comment .authorizeView1 .bnted {
  background: #f8f8f8;
}

.comment .authorizeView1 .bnt .share {
  width: 40rpx;
  height: 40rpx;
}

.comment .authorizeView2 {
  flex-shrink: 0;
  flex-grow: 0;
}

.comment  .authorizeView2 .bnt2 {
  padding: 16rpx 25rpx;
  margin: 0;
  border-radius: 0;
  background: #fff;
  line-height: 1;
  margin-right: 20rpx;
}

.comment  .authorizeView2 .bnted2 {
  background: #f8f8f8;
}

.comment  .authorizeView2 .bnt2 .collect {
  width: 60rpx;
  height: 60rpx;
}

.comment .authorizeView3 {
  flex-shrink: 0;
  flex-grow: 0;
}

.comment .authorizeView3 .bnt3 {
  padding: 16rpx 25rpx;
  margin: 0;
  border-radius: 8rpx;
  background: #0eb6ed;
  line-height: 1;
  margin-right: 20rpx;
  flex-shrink: 0;
  flex-grow: 0;
  color: #fff;
}
