/* page/widget/commentList/commentList.wxss */

.title {
  display: flex;
  flex-flow: row nowrap;
  padding: 15rpx 0;
  align-items: flex-end;
}

.title .name {
  font-size: 30rpx;
  color: #353535;
  margin-left: 20rpx;
  font-weight: 600;
}

.title .num {
  font-size: 24rpx;
  color: #999;
  margin-left: 15rpx;
}

.commentEmpty {
  font-size: 30rpx;
  padding: 20rpx;
  color: #999;
  font-weight: 500;
}

.commentList {
  display: flex;
  flex-flow: column;
}

.commentList .item {
  display: flex;
  flex-flow: column;
  padding: 30rpx 0;
  margin: 0 5rpx;
  border-bottom: 1rpx solid #f2f2f2;
}

.commentList .item  .topview {
  display: flex;
  flex-flow: row column;
  align-items: center;
  position: relative;
}

.commentList .item  .topview .layer {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  width: 740rpx;
}

.commentList .item  .topview .layer .userImg {
  width: 82rpx;
  height: 82rpx;
  border-radius: 50%;
  margin-left: 15rpx;
}

.commentList .item  .topview .layer .nameAndTime {
  display: flex;
  flex-flow: column;
  margin-left: 13rpx;
  justify-content: space-between;
  align-items: flex-start;
  flex-grow: 1;
  height: 82rpx;
}

.commentList .item  .topview .layer .nameAndTime .name {
  font-size: 28rpx;
  color: #2b79b5;
}

.commentList .item  .topview .layer .nameAndTime .time {
  font-size: 22rpx;
  color: #999;
}

.commentList .item  .topview .layer .commentZan {
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: flex-end;
  margin: 0;
  padding: 10rpx 14rpx;
  background: #fff;
  border-radius: 0;
}

.commentList .item  .topview .layer .commentZan image {
  width: 28rpx;
  height: 28rpx;
}

.commentList .item  .topview .layer .hoverClass {
  background: #f8f8f8;
}

.commentList .item  .topview .layer .commentZan .num {
  font-size: 24rpx;
  color: #bcbcbc;
  margin-left: 8rpx;
  line-height: 1;
}

.commentList .item  .topview .layer .more {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  margin: 0 14rpx 0 0;
  padding: 12rpx 14rpx 8rpx 14rpx;
  border-radius: 0;
  background: #fff;
  line-height: 1;
}

.commentList .item  .topview .layer .more::after {
  border: 0;
}

.commentList .item  .topview .layer .more .hoverClass2 {
  background: #f8f8f8;
}

.commentList .item  .topview .layer .more  .huifu {
  color: #999;
  font-size: 24rpx;
  line-height: 1;
}

