button {
  position: static;
  background-color: transparent;
  border-radius: 0;
  font-size: 0;
}

button::after {
  border: 0;
}

.video-view {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.8);
  position: absolute;
  top: 0;
  left: 0;
}

.video-contain {
  width: 94%;
  margin: auto;
  font-size: 0;
  margin-top: 400rpx;
  position: relative;
  border: 1px solid #eee;
}

.video_image {
  width: 100%;
  height: 404rpx;
}

.video-title {
  width: 100%;
  height: 100rpx;
  background-color: #fff;
}

.video-title>text {
  display: block;
  font-size: 30rpx;
  text-align: left;
  color: rgba(0, 0, 0, 1);
  line-height: 100rpx;
  margin-left: 30rpx;
}

.video-contain .video-share, .video-contain .cover-view {
  width: 60rpx;
  height: 60rpx;
}

.video-contain .video-share>image, .video-contain .cover-image {
  width: 100%;
  height: 100%;
}

.tip-icon {
  display: flex;
  justify-content: center;
  position: absolute;
  bottom: 25%;
  left: 50%;
  transform: translateX(-50%);
}

.tip-icon image {
  width: 50rpx;
  height: 50rpx;
}
