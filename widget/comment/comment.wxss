/* 底部操作栏 */
@import '/app.wxss';

.message-wrapper {
  max-width: 100%;
  border: 1px solid #ececec;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 999;
  background-color: #fff;
  font-size: 32rpx;
}

.message-wrapper .input-wrapper, .message-wrapper .view-wrapper {
  padding: 10rpx 0;
  box-sizing: border-box;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  height: 100rpx;
}

.input-wrapper {
  background-color: #f6f6f6;
}

.input-wrapper .btn-back {
  width: 10%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0rpx 10rpx;
  box-sizing: border-box;
}

.input-wrapper .btn-back image {
  width: 48rpx;
  height: 48rpx;
}

.input-wrapper .input-txt {
  background-color: #fff;
  border-radius: 10rpx;
  padding-left: 10rpx;
  width: 70%;
  height: 60rpx !important;
  line-height: 60rpx;
}

.input-wrapper .btn-send {
  width: 14%;
  margin: 0 20rpx;
  text-align: center;
  height: 52rpx;
  line-height: 52rpx;
  border-radius: 10rpx;
  background-color: #44ccfc;
  color: #fff;
}

.view-wrapper {
  background-color: #fff;
}

.view-wrapper .input-box {
  width: 60%;
  border-right: 1px solid #ececec;
  height: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 0rpx 10rpx;
  box-sizing: border-box;
}

.view-wrapper .input-box image {
  width: 61rpx;
  height: 48rpx;
}

.view-wrapper .input-box text {
  color: #898989;
  font-size: 30rpx;
  margin-left: 15rpx;
  line-height: 60rpx;
  background-color: #f6f6f6;
  border: 1px solid #f6f6f6;
  border-radius: 10rpx;
  padding-left: 8rpx;
  width: 100%;
}

.view-wrapper .operator {
  width: 40%;
  height: 100%;
  display: flex;
  justify-content: space-between;
  padding: 0 10rpx;
}

.view-wrapper .operator .item {
  background: transparent;
  width: 32%;
  height: 100%;
  margin: 0;
  padding: 0;
  vertical-align: middle;
  display: flex;
  justify-content: center;
  align-items: center;
}

.view-wrapper .operator .item::after {
  border: 0px solid red;
}

.view-wrapper .operator .item image {
  width: 42rpx;
  height: 40rpx;
}

.view-wrapper .operator .item text {
  display: block;
  position: absolute;
  font-size: 28rpx;
  right: 0;
  top: -20rpx;
  color: #888;
}

