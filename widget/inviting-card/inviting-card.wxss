}

.bnt {
  width: 100%;
  display: flex;
  flex-flow: row wrap;
  justify-content: space-between;
  padding-top: 56rpx;
  align-items: center;
  background: rgba(0, 0, 0, 0);
  flex-grow: 0;
  flex-shrink: 0;
}

.bnt .bnt1 {
  margin: 0;
  background: #ffd100;
  font-size: 28rpx;
  color: #202020;
  line-height: 65rpx;
  padding: 0 15rpx;
}

.bnt .bnt2 {
  margin: 0;
  background: rgba(0, 0, 0, 0);
  font-size: 28rpx;
