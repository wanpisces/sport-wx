.bg {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 1002;
  background: rgba(40, 40, 40, 0.8);
}

.v_view {
  position: fixed;
  top: 240rpx;
  left: 95rpx;
  width: 560rpx;
  z-index: 1003;
  display: flex;
  flex-flow: column;
  background: rgba(0, 0, 0, 0);
}

.code {
  height: 815rpx;
  width: 560rpx;
  background: #fff;
  border-radius: 10rpx;
  display: flex;
  flex-flow: column;
  align-items: center;
}

.canvas_view {
  height: 815rpx;
  width: 560rpx;
  background: #fff;
}

.view2 {
  margin-top: 533rpx;
}

.tips {
  font-size: 32rpx;
  color: #353535;
  padding: 20rpx;
