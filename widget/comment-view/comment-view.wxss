/* widget/comment-view/comment-view.wxss */

.commentview {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  bottom: 50px;
  opacity: 1;
  background: rgba(0, 0, 0, 0);
    z-index: 3000;
}

.comment-bottom-view {
  position: fixed;
  z-index: 3000;
  bottom: 0;
  height: 50px;
  width: 100%;
  background: rgba(244, 244, 244, 1);
  display: flex;
  opacity: 1;
  flex-flow: row nowrap;
  align-items: center;
}

.input-view {
  flex-grow: 1;
  flex-shrink: 1;
  margin-left: 10px;
  height: 30px;
  border-radius: 15px;
  background: #fff;
  margin-right: 10px;
  padding: 0 10px;
  font-size: 10pt;
  color: #353535;
}

.send {
  background: #ffb900;
  line-height: 30px;
  width: 60px;
  border-radius: 2px;
  color: #fff;
  font-size: 12pt;
  margin-right: 10px;
}

.placeholder-class {
  font-size: 10pt;
  color: #bdbdbd;
}
