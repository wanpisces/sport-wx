@import "/libs/icon.wxss";
@import "/my-template/position/position.wxss";

.pages {
  min-height: 100%;
  background-color: #f2f2f2;
  position: relative;
}

.position-search {
  width: 690rpx;
  height: 68rpx;
  background-color: #fff;
  border-radius: 34rpx;
  display: flex;
  align-items: center;
  margin: auto;
}

.position-address {
  margin-top: 20rpx;
  /* margin-bottom: 120rpx; */
}

.position-address-title {
  height: 86rpx;
  background-color: #fbfbfd;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.position-select {
  width: 100%;
  height: 90rpx;
  background: #ffd100;
  position: fixed;
  bottom: 0;
  left: 0;
  font-size: 38rpx;
  color: #353535;
  text-align: center;
  line-height: 90rpx;
  font-weight: 600;
  z-index: 1;
  margin-top: 90rpx;
}

.emp {
  padding: 0rpx 30rpx;
  line-height: 130rpx;
  font-size: 30rpx;
  color: #353535;
  background: #fff;
}
