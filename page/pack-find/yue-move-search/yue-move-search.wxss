@import "/my-template/load/listTemplate.wxss";

.navigationBar {
  position: fixed;
  width: 100%;
  top: 0;
  left: 0;
  opacity: 1;
  z-index: 1001;
  /* background: #282828; */
}

.filter-wrap {
  padding: 0 12rpx;
  height: 90rpx;
  z-index: 1001;
  border-bottom: 2px solid #f2f2f2;
}

.find-search {
  background: #f2f2f2;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 32rpx;
  color: #ffd100;
}

.find-search>view {
  width: 90%;
  border-radius: 40rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding: 10rpx 0;
  font-size: 30rpx;
  color: #8f8f8f;
}

.find-search  image {
  width: 45rpx;
  height: 45rpx;
  margin-left: 20rpx;
}

.find-search  input {
  width: 95%;
}

.find-team-fixed {
  width: 100%;
  position: fixed;
  top: 65px;
  left: 0;
  background: #fff;
  z-index: 1000;
}

