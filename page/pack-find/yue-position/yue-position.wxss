@import "/libs/icon.wxss";
@import "/my-template/position/position.wxss";
@import "/my-template/load/listTemplate.wxss";

.pages {
  background-color: #f2f2f2;
  position: relative;
  padding-bottom: 90rpx;
}

.position-search {
  width: 690rpx;
  height: 68rpx;
  background-color: #fff;
  border-radius: 34rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: auto;
}

.position-address {
  margin-top: 20rpx;
}

.position-address-title {
  width: 100%;
  height: 86rpx;
  background-color: #fbfbfd;
  padding-left: 30rpx;
  font-size: 26rpx;
  color: #acacad;
  line-height: 86rpx;
}

.position-address-spaicl {
  height: 86rpx;
  background-color: #fbfbfd;
  padding: 0 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.position-manage {
  display: flex;
  align-items: center;
}

.position-location {
  width: 100%;
  height: 130rpx;
  background: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.position-location-one {
  display: flex;
  align-items: center;
}

.submit {
  width: 100%;
  height: 90rpx;
  background: #ffd100;
  position: fixed;
  bottom: 0;
  left: 0;
  font-size: 38rpx;
  color: #353535;
  text-align: center;
  line-height: 90rpx;
  font-weight: 600;
}
