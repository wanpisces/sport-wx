/* page/pack-mine/mine-feedback/mine-feedback.wxss */

.title {
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-start;
  align-items: center;
}

.labe {
  display: flex;
  flex-flow: column;
  align-items: flex-start;
  justify-content: flex-start;
  margin: 15rpx 10rpx 30rpx 15rpx;
}

.labe text {
  font-size: 30rpx;
  color: #353535;
  margin-left: 6rpx;
}

.checkboxgroup {
  display: flex;
  flex-flow: row nowrap;
  margin: 15rpx 0rpx 0rpx 0rpx;
}

.group {
  padding: 5rpx;
}

.pj-tdv {
  display: flex;
  flex-flow: row wrap;
  margin: 15rpx 0rpx 20rpx 15rpx;
}

.pj_td {
  border-radius: 6rpx;
  padding: 8rpx 12rpx 8rpx 12rpx;
  font-size: 24rpx;
  margin-left: 8rpx;
}

.pj_td.on {
  color: #fff;
  background: #49ccfc;
  border: 1rpx solid #49ccfc;
}

.pj_td.off {
  color: #999;
  background: #fff;
  border: 1rpx solid #aeaeae;
}

.input-txt {
  width: 96%;
  /* position: relative; */
  border: 1rpx solid #f2f2f2;
}

.input-txt textarea {
  width: 96%;
  padding: 10rpx;
  height: 200rpx;
}

.holder {
  font-size: 30rpx;
  color: #999;
}

.input-img {
  display: flex;
  flex-flow: row wrap;
  width: 100%;
  box-sizing: border-box;
  position: relative;
  bottom: 0;
  /* left: 20rpx; */
}

.img-view {
  position: relative;
}

.img-add {
  margin: 10rpx;
}

.img-cancel {
  position: absolute;
  top: 0rpx;
  right: 0rpx;
}

.item {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
  line-height: 90rpx;
  border-bottom: 1px solid #f2f2f2;
}

.item .img1 {
  width: 36rpx;
  height: 36rpx;
  flex-grow: 0;
  flex-shrink: 0;
}

.item .v1 {
  font-size: 30rpx;
  color: #515151;
  margin-left: 8rpx;
  flex-grow: 0;
  flex-shrink: 0;
}

.item .v2 {
  font-size: 30rpx;
  color: #515151;
  margin-left: 8rpx;
  text-align: right;
  padding: 0 10rpx;
  flex-grow: 1;
  flex-shrink: 1;
}

.item .img2 {
  width: 32rpx;
  height: 32rpx;
  flex-grow: 0;
  flex-shrink: 0;
}

.submit {
  background: -webkit-linear-gradient(left, #ffd100, #ffae00);
  color: #282828;
  border-radius: 45rpx;
  height: 90rpx;
  margin: 190rpx 75rpx 190rpx 75rpx;
  padding: 0 120rpx;
  font-weight: bold;
  line-height: 90rpx;
  text-align: center;
}

/* 单选 */

.radio-group {
  width: 80%;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: space-around;
  line-height: 98rpx;
  padding: 0 20rpx;
}

.radio-item {
  color: #353535;
  font-size: 30rpx;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
}

radio {
  box-sizing: border-box;
  background: #fff;
}

radio .wx-radio-input {
  border-radius: 50%; /* 圆角 */
  width: 30rpx;
  height: 30rpx;
  border: 1px solid #e5e5e5;
  vertical-align: text-top;
  background: #fff;
  box-sizing: border-box;
}

/* 选中后的 背景样式 （红色背景 无边框 可根据UI需求自己修改） */

radio .wx-radio-input.wx-radio-input-checked {
  border: 1px solid #ffb200;
  background: #ffb200;
  box-sizing: border-box;
}

/* 选中后的 对勾样式 （白色对勾 可根据UI需求自己修改） */

radio .wx-radio-input.wx-radio-input-checked::before {
  background: #ffb200;
  border: 1px solid #ffb200;
  border-radius: 50%; /* 圆角 */
  width: 30rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
  height: 30rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
  line-height: 30rpx;
  text-align: center;
  font-size: 20rpx; /* 对勾大小 20rpx */
  color: #fff; /* 对勾颜色 白色 *//* background: transparent; */
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

.lineService {
  width: 98%;
  margin: 0 auto;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.lineService>button {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
  background-color: transparent;
}

.lineService>button::after {
  border: none;
}

.lineService image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.lineService text {
  font-size: 26rpx;
  color: #ffbf00;
}
