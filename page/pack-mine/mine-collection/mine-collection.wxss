/* page/pack-mine/mine-collection/mine-collection.wxss */
@import "/my-template/news/news.wxss";
@import "/my-template/match/match.wxss";
@import "/my-template/load/listTemplate.wxss";
.navigationBar {
  position: fixed;
  width: 100%;
  top: 0;
  left: 0;
  opacity: 1;
  z-index: 1000;
  background: #282828;
}

.main-wrapper {
  padding-top: 130rpx;
}

.data_view {
  width: 100%;
  display: flex;
  flex-flow: column;
}

.scroll-view-H {
  width: 100%;
  height: 45px;
  position: fixed;
  padding: 6.5px 10rpx;
  /* border-top: 1px solid #f2f2f2; */
  border-bottom: 1px solid #f8f8f8;
  box-sizing: border-box;
}

.view-scroll {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
}

.scroll-item {
  height: 30px;
  margin: 0px 10rpx;
  padding: 0 20rpx;
  border-radius: 15px;
  color: #999;
  line-height: 30px;
  font-size: 32rpx;
  text-align: center;
  flex-grow: 0;
  flex-shrink: 0;
}

.scroll-item-ed {
  background: #ffd100;
  color: #353535;
  font-weight: bold;
}

.swiper-view {
  position: fixed;
  z-index: 1;
  width: 100%;
}

.empty-view {
  display: flex;
  flex-flow: column;
  align-items: center;
  justify-content: center;
}
