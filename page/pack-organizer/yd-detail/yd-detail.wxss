.openStatus-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #353535;
  text-align: center;
  padding: 20rpx 0;
}

.openStatus-text {
  font-size: 28rpx;
  color: #353535;
  margin: 30rpx;
  text-align: center;
}

.openStatus-btn {
  margin: 0 auto;
  color: #ffd100;
  font-size: 24rpx;
  text-align: center;
  padding: 50rpx 0;
}
