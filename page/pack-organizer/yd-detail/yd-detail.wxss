@import "/my-template/load/listTemplate.wxss";
@import "/libs/icon.wxss";

page {
  min-height: 100%;
  width: 100%;
  background-color: #222;
}

.pages {
  position: relative;
  min-height: 100%;
  background-color: #222;
}

.pages-fixed {
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: absolute;
}

.v2 {
  position: relative;
  background: #222;
}

.v2-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translateX(-50%);
}

.v2-content image {
  width: 107rpx;
  height: 107rpx;
  background: rgba(0, 0, 0, 0);
  border: 3rpx solid rgba(226, 226, 226, 1);
  border-radius: 50%;
}

.v2-tag {
  width: 76rpx;
  height: 22rpx;
  background: rgba(255, 226, 39, 1);
  border-radius: 5rpx;
  font-size: 20rpx;
  color: #353535;
  text-align: center;
  line-height: 22rpx;
  font-family: Hiragino Sans GB;
  margin: 0 auto;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translateX(-50%);
}

.v2-name {
  font-size: 30rpx;
  font-family: Hiragino Sans GB;
  line-height: 62rpx;
  color: rgba(255, 255, 255, 1);
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
}

.data_view_tag {
  width: 119rpx;
  height: 56rpx;
  background-color: #ffd100;
  border-radius: 50rpx 0 0 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  right: 0;
  top: 38%;
}

.yue-rules {
  background: #2d2c33;
  color: #c2c2c2;
  font-size: 32rpx;
  padding-left: 30rpx;
  padding-top: 20rpx;
}

.yue-rules view {
  display: flex;
  padding: 10rpx 0 30rpx 0;
  word-wrap: break-word;
}

.yue-rules button {
  padding: 0;
  line-height: 30rpx;
  background-color: transparent;
  text-align: left;
  margin: 0;
}

/* 选项卡 */

.team_list {
  width: 100%;
  background-color: #2d2c33;
}

.detail-list {
  width: 100%;
  min-height: 360rpx;
  background-color: #2d2c33;
  padding-bottom: 70rpx;
  position: relative;
}

.swiper-tab {
  padding: 20rpx 0;
  text-align: center;
  background-color: #2d2c33;
  display: flex;
  justify-content: space-around;
}

.swiper-tab-list {
  font-size: 32rpx;
  color: #c2c2c2;
  display: flex;
  align-items: center;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  justify-content: center;
}

.swiper-tab-list input {
  max-width: 230rpx;
  margin-right: 30rpx;
}

.hidden-style {
  display: block;
  max-width: 240rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.on {
  color: #fff;
  font-size: 28rpx;
  line-height: 60rpx;
  border-bottom: 6rpx #ffd100 solid;
  border-radius: 3rpx;
  /* width: auto; */
}

.in {
  /* width: auto; */
  color: #353535;
  font-size: 32rpx;
  line-height: 60rpx;
  border-radius: 3rpx;
  border-bottom: 6rpx solid #ffd100;
}

.swiper-contain {
  width: 100%;
}

.swiper-contain>view {
  display: none;
}

.swiper-contain>.sport-select, .detail-team {
  display: block;
}

.detail_content {
  padding: 20rpx 0;
  margin: 0 20rpx;
  border-bottom: 1rpx solid #414141;
}

.detail_content:nth-last-child(2) {
  border-bottom: none;
}

.detail-top {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  box-sizing: border-box;
}

.detail-top-one {
  position: relative;
}

.detail-top-one .headImg {
  width: 90rpx;
  height: 90rpx;
  background: rgba(242, 242, 242, 1);
  border-radius: 50%;
  margin-right: 20rpx;
}

.detail-top-one .sex {
  width: 30rpx;
  height: 30rpx;
  background: rgba(242, 242, 242, 1);
  border-radius: 50%;
  position: absolute;
  top: -8rpx;
  right: 24rpx;
}

/* .detail-top-two {
  margin-left: 30rpx;
} */

.detail-name {
  font-size: 32rpx;
  font-weight: 400;
  color: #fff;
}

.detail-time {
  font-size: 24rpx;
  font-weight: 400;
  line-height: 60rpx;
  color: #c2c2c2;
}

.detail-top-three {
  display: flex;
  flex-grow: 1;
  justify-content: flex-end;
  margin-right: 20rpx;
  height: 0;
}

.detail-center {
  display: flex;
  flex-wrap: wrap;
}

.detail-center>view {
  font-size: 26rpx;
  color: #c2c2c2;
  width: 50%;
  line-height: 46rpx;
}

.detail-center>view:nth-child(2n) {
  text-align: right;
}

.checkMore {
  display: flex;
  justify-content: center;
  padding: 20rpx 0;
}

.btn-baoming {
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(142deg, rgba(255, 206, 0, 1) 0%, rgba(255, 178, 0, 1) 100%);
  box-shadow: 0rpx 1rpx 10rpx rgba(0, 0, 0, 0.16);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  /* position: fixed; *//* bottom: 300rpx;
  right: 30rpx; */
}

.btn-caozuo {
  width: 100%;
  height: 98rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.btn-caozuo authorizeView {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-caozuo .btn-detail {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.yd-detail {
  width: 100%;
  background: #2d2c33;
  padding-bottom: 40rpx;
  position: relative;
}

.match {
  width: 710rpx;
  height: 355rpx;
  background: rgba(44, 43, 51, 1);
  border: 2px solid rgba(38, 37, 43, 1);
  box-shadow: 0px 14rpx 14rpx rgba(0, 0, 0, 0.11);
  border-radius: 6rpx;
  margin: 0 auto;
  padding-top: 30rpx;
  position: relative;
}

.match_type {
  width: 68rpx;
  height: 30rpx;
  background-color: #ffd100;
  font-size: 20rpx;
  color: #282828;
  text-align: center;
  line-height: 30rpx;
  border-radius: 0rpx 50rpx 50rpx 0;
  position: absolute;
  top: 20rpx;
  left: 0;
}

.match_team {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  border-bottom: 1rpx solid #484848;
  padding-bottom: 45rpx;
  margin: 0 30rpx;
}

.match_team .team1 {
  width: 220rpx;
}

.match_team .to {
  width: 150rpx;
}

.match_team .team2 {
  width: 220rpx;
}

.match_team .team1, .match_team .team2 {
  display: flex;
  flex-flow: column;
  align-items: center;
}

.match_team .team1 image, .match_team .team2 image {
  height: 84rpx;
  width: 84rpx;
  border-radius: 50%;
  background: #f4f4f4;
}

.match_team .team1 view, .match_team .team2 view {
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
  width: 100%;
  margin-top: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: center;
}

/* .match_team .team2 view {
  color: #999;
} */

.match_team .to {
  display: flex;
  flex-flow: column;
  align-items: center;
  width: 27%;
}

.match_team .to image {
  width: 35rpx;
  height: 35rpx;
  /* background: #f4f4f4; */
}

.match_team .to view {
  line-height: 40rpx;
  background: #ffd100;
  font-size: 26rpx;
  color: #282828;
  border-radius: 20rpx;
  padding: 0 20rpx;
  margin-top: 10rpx;
}

.match_details {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: space-between;
  padding: 0 40rpx;
  margin-top: 18rpx;
}

.match_details_time {
  display: flex;
  align-items: center;
  margin-top: 10rpx;
}

.match_details text {
  font-size: 24rpx;
  color: #999;
}

.match_details text:nth-child(2) {
  margin-left: 20rpx;
}

.match_details text:nth-child(3) {
  flex-grow: 1;
  text-align: right;
}

.match_addr {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  margin-top: 20rpx;
  padding: 0 40rpx;
}

.match_addr image {
  width: 22rpx;
  height: 22rpx;
  /* background: #f4f4f4; */
  flex-shrink: 0;
  flex-grow: 0;
}

.match_details view, .match_details_time view, .match_addr view {
  font-size: 28rpx;
  color: #fff;
  margin-left: 8rpx;
  white-space: nowrap;
}

.match_addr .match_addr_item {
  width: 95%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 弹窗 */

.open-tip {
  width: 100%;
  height: 100%;
  background: rgba(67, 65, 65, 0.8);
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1000;
}

.open-content {
  width: 684rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 20rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate3d(-50%, -50%, 0);
}

.open-content-title {
  font-size: 34rpx;
  line-height: 39rpx;
  color: rgba(34, 34, 34, 1);
  text-align: center;
  padding: 30rpx 0;
}

.announce-bnt {
  height: 200rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.announce-bnt .btn {
  width: 169rpx;
  height: 59rpx;
  font-size: 28rpx;
  background: linear-gradient(90deg, rgba(254, 211, 9, 1) 0%, rgba(253, 175, 8, 1) 100%);
  box-shadow: 2rpx 3rpx 16rpx rgba(177, 19, 37, 0.24);
  border-radius: 30rpx;
  background: -webkit-linear-gradient(left, #ffd100, #ffae00);
  background: -o-linear-gradient(left, #ffd100, #ffae00);
  background: -moz-linear-gradient(left, #ffd100, #ffae00);
  background: linear-gradient(left, #ffd100, #ffae00);
  line-height: 59rpx;
}

.announce-bnt button::after {
  border: none;
}

.tip-content {
  width: 100%;
  display: flex;
  margin-top: 50rpx;
  flex-wrap: wrap;
}

.tip-container {
  width: 25%;
  position: relative;
}

.container-img {
  display: block;
  margin: auto;
  width: 90rpx;
  height: 90rpx;
  background: #eee;
  border-radius: 50%;
}

.container-name {
  font-size: 24rpx;
  color: #353535;
  text-align: center;
  line-height: 49rpx;
}

.container-icon {
  width: 22rpx;
  height: 22rpx;
  background: rgba(247, 247, 247, 1);
  border: 1rpx solid rgba(217, 217, 217, 1);
  border-radius: 50%;
  opacity: 1;
  position: absolute;
  top: 65rpx;
  right: 20px;
}

.container-select-icon {
  font-size: 22rpx;
  color: #fdb008;
  border-radius: 50%;
  opacity: 1;
  position: absolute;
  top: 65rpx;
  right: 20px;
}

.emptyView2 {
  background-color: transparent;
}

