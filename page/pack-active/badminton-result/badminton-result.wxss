/* page/pack-active/badminton-result/badminton-result.wxss */
@import '/my-template/group-match/group-match.wxss';
.navigationBar {
  position: fixed;
  width: 100%;
  top: 0;
  left: 0;
  opacity: 1;
  z-index: 1000;
  color: #000;
}

.top-wrapper {
  position: relative;
}

.top-image {
  width: 100%;
  height: 360rpx;
}

.share-btn-wrap {
  display: flex;
  flex-flow: row;
  justify-content: center;
  align-items: center;
  width: 120rpx;
  height: 55rpx;
  background: #ffd100;
  font-size: 30rpx;
  color: #353535;
  border-radius: 30rpx 0 0 30rpx;
}

.share-btn-wrap>text {
  margin-top: 4rpx;
  margin-right: 8rpx;
  font-size: 26rpx;
}

.b-tabs {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 20rpx 30rpx 38rpx;
}

.b-tabs text {
  text-align: center;
  width: 50%;
  border: 1px solid #000;
  padding: 10rpx 0;
  font-size: 32rpx;
}

.b-tabs text:nth-child(1) {
  border-top-left-radius: 8rpx;
  border-bottom-left-radius: 8rpx;
}

.b-tabs text:nth-child(2) {
  border-top-right-radius: 8rpx;
  border-bottom-right-radius: 8rpx;
}

.b-active {
  background: #202020;
  color: #fff;
}

.match-tabs {
  display: flex;
  justify-content: center;
  font-size: 32rpx;
  color: #999;
}

.match-tabs>view {
  display: flex;
  flex-flow: column;
  justify-content: center;
  align-items: center;
  margin: 0 50rpx;
}

.match-tabs>view.active {
  color: #202020;
}

.match-tabs>view.active>text {
  color: #202020;
  background: #ffd100;
}

.match-tabs>view>text {
  display: inline-block;
  margin-top: 10rpx;
  width: 60rpx;
  height: 6rpx;
  border-radius: 3px;
  background: #fff;
}
.match-content {
  min-height: 500rpx;
  padding: 30rpx 19rpx;
  background: #efeff4;
}
.match-item {
  display: flex;
  justify-content: space-between;
  border-radius: 6rpx;
  background: #fff;
  margin-bottom: 30rpx;
}

.match-item>view {
  display: flex;
  flex-flow: column;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0 15rpx;
}

.match-item>view:nth-of-type(1), .match-item>view:nth-of-type(3) {
  width: 30%;
}

.match-item>view:nth-of-type(2) {
  width: 40%;
}

.group-num {
  width: 44rpx;
  height: 44rpx;
  line-height: 44rpx;
  font-size: 24rpx;
  text-align: center;
  color: #353535;
  border-radius: 50%;
  background: #ffd100;
}

.group-item {
  display: flex;
  flex-flow: column;
  justify-content: center;
  align-items: center;
  margin: 14rpx auto 8rpx;
  font-size: 24rpx;
  color: #353535;
}

.group-item>view {
  width: 200rpx;
  margin-bottom: 10rpx;
  font-size: 28rpx;
  text-align: center;
  font-weight: bold;
}
.group-item>text {
  width: 200rpx;
  display: block;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.juesai {
  font-size: 28rpx;
  color: #353535;
  font-weight: bold;
}

.match-score {
  margin-top: 10rpx;
  text-align: center;
  font-size: 40rpx;
  color: #353535;
  font-weight: bold;
}

.match-score>text {
  margin-left: 20rpx;
  letter-spacing: 20rpx;
}

.match-detail-score {
  margin-top: 28rpx;
  font-size: 24rpx;
  color: #999;
}

.match-detail-score>text {
  margin: 0 20rpx;
}

.group-select {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 47rpx auto 29rpx;
  width: 242rpx;
  height: 52rpx;
  border-radius: 26rpx;
  background: #ffd100;
  text-align: center;
  font-size: 28rpx;
  color: #202020;
}

.black-down {
  margin: 3rpx 0 0 28rpx;
  width: 0;
  height: 0;
  border-top: 15rpx solid #000;
  border-right: 12rpx solid transparent;
  border-left: 12rpx solid transparent;
}

.group-score-wrap {
  padding: 33rpx 20rpx 23rpx 42rpx;
  border-radius: 6rpx;
  background: #fff;
  margin-bottom: 30rpx;
}
.group-title {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12rpx;
  font-size: 28rpx;
  color: #353535;
}
.group-title>text,.group-list>text{
  display: inline-block;
}
.group-list{
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
  color: #353535;
  margin: 12rpx 0;
}
.group-title>text:nth-of-type(1),.group-list>text:nth-of-type(1){
  width: 80rpx;
}
.group-title>text:nth-of-type(2),.group-list>text:nth-of-type(2){
  width: 80rpx;
}
.group-title>text:nth-of-type(3),.group-list>text:nth-of-type(3){
  width: 80rpx;
}

.group {
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-wrap: wrap;
}

.group .btn {
  width: 124rpx;
  height: 52rpx;
  background: rgba(242, 242, 242, 1);
  border-radius: 26rpx;
  font-size: 28rpx;
  line-height: 52rpx;
  color: rgba(32, 32, 32, 1);
  margin: 0 25rpx;
  margin-top: 30rpx;
}

.group .select {
  width: 124rpx;
  height: 52rpx;
  background: rgba(255, 209, 0, 1);
  border-radius: 26rpx;
  font-size: 28rpx;
  line-height: 52rpx;
  color: #202020;
  margin: 0 25rpx;
  margin-top: 30rpx;
}

.group-detail {
  width: 100%;
}

.check-more{
  display: flex;
  justify-content: center;
  flex-flow: row;
  font-size: 24rpx;
  color: #999999;
  text-align: center;
}
.empty-view {
  width: 100%;
  height: 100%;
  display: flex;
  flex-flow: column;
  justify-content: center;
  align-items: center;
  margin-top: 15%;
}