@import "/my-template/group-match/group-match.wxss";
@import "/my-template/load/listTemplate.wxss";
@import "/libs/icon.wxss";

.pages {
  width: 100%;
  position: relative;
}

.pages-fixed {
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: absolute;
}

.navigationBar-bg image {
  width: 100%;
  height: 360rpx;
  position: relative;
}

.group {
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-wrap: wrap;
}

.group .btn {
  width: 124rpx;
  height: 52rpx;
  background: rgba(242, 242, 242, 1);
  border-radius: 26rpx;
  font-size: 28rpx;
  line-height: 52rpx;
  color: rgba(32, 32, 32, 1);
  margin-top: 30rpx;
}

.group .select {
  width: 124rpx;
  height: 52rpx;
  background: rgba(255, 209, 0, 1);
  border-radius: 26rpx;
  font-size: 28rpx;
  line-height: 52rpx;
  color: #202020;
  margin-top: 30rpx;
}

.group-detail {
  width: 100%;
}

.data_view_tag {
  width: 119rpx;
  height: 56rpx;
  background-color: #ffd100;
  border-radius: 50rpx 0 0 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  right: 0;
  top: 50rpx;
}

.apply-bg {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
  position: absolute;
  top: 0;
  left: 0;
}

.apply-content {
  width: 666rpx;
  background-color: #fff;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate3d(-50%, -50%, 0);
  border-radius: 30rpx;
}

.apply-title {
  font-size: 40rpx;
  line-height: 180rpx;
  color: rgba(34, 34, 34, 1);
  text-align: center;
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
}

.apply-text {
  width: 100%;
}

.apply-text>view {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 0 30rpx;
  /* padding: 25rpx 0; */
  height: 96rpx;
  border-bottom: 1rpx #f2f2f2 solid;
  font-size: 35rpx;
  color: #666;
  position: relative;
}

.apply-text>view>view {
  width: 25%;
}

.release-content-img {
  width: 40rpx;
  height: 40rpx;
}

.release-content-right {
  color: #353535;
  font-size: 35rpx;
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-end;
  align-items: center;
  flex-grow: 1;
  flex-shrink: 1;
}

.release-content-right view {
  font-size: 36rpx;
  color: #666;
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-end;
  align-items: center;
  flex-grow: 1;
  flex-shrink: 1;
}

.apply-btn view {
  width: 203rpx;
  height: 83rpx;
  background: linear-gradient(90deg, rgba(255, 209, 0, 1) 0%, rgba(255, 174, 0, 1) 100%);
  border-radius: 45rpx;
  font-size: 30rpx;
  line-height: 83rpx;
  color: rgba(34, 34, 34, 1);
  margin-bottom: 40rpx;
}

.apply-btn {
  margin-top: 60rpx;
  display: flex;
  justify-content: center;
}

.apply-join {
  font-size: 46rpx;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  text-align: center;
  margin: 40rpx 0 30rpx 0;
}

.apply-join>text {
  font-weight: bold;
  color: #101010;
}

.apply-join-text {
  font-size: 36rpx;
  font-weight: 400;
  line-height: 75rpx;
  color: rgba(102, 102, 102, 1);
  text-align: center;
}

.knows view {
  width: 259rpx;
  border-radius: 45rpx;
}

.apply-line {
  width: 90%;
  margin: auto;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #f2f2f2;
}

.apply-text .tip {
  font-size: 26rpx;
  font-weight: 400;
  line-height: 75rpx;
  color: rgba(255, 178, 0, 1);
  display: flex;
  justify-content: flex-start;
  border-bottom: none;
}

.shareGoHome {
  position: fixed;
  bottom: 120rpx;
  right: 30rpx;
  z-index: 2001;
}

.shareGoHome image {
  width: 120rpx;
  height: 120rpx;
}

.empty-view {
  width: 100%;
  height: 100%;
  display: flex;
  flex-flow: column;
  justify-content: center;
  align-items: center;
  margin-top: 20%;
}
