/* page/tabBar/mine/mine.wxss */

page {
  background: #f2f2f2;
}

.base {
  position: relative;
  display: flex;
  flex-flow: column;
  align-items: center;
}

.user-details {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
  width: 710rpx;
  margin-left: 40rpx;
  z-index: 2;
}

.base-bg {
  position: absolute;
  width: 100%;
  top: 0;
  left: 0;
  z-index: 1;
}

.base-bg-space {
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 1;
}

.base-left {
  display: flex;
  flex-flow: row;
  justify-content: center;
  align-items: center;
}

.base-id {
  font-size: 20rpx;
  color: #fff;
  margin-top: 10rpx;
}

.base  .headPortrait {
  margin-right: 23rpx;
  width: 90rpx;
  height: 90rpx;
  border-radius: 65rpx;
  border: 1rpx solid #f2f2f2;
}

.base .name {
  font-size: 30rpx;
  color: #fff;
  max-width: 220rpx;
  font-weight: bold;
  margin-top: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: box;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.base .userId {
  font-size: 18rpx;
  color: #666;
  margin-top: 10rpx;
}

.base .other {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  width: 100%;
  font-size: 26rpx;
  color: #fff;
  margin-top: 60rpx;
}

.userBut::after {
  border: 0;
}

.userBut {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #fff;
  padding: 12rpx 30rpx;
  margin: 30rpx;
  line-height: 1;
  background: #00a0e9;
  border-radius: 8rpx;
}

.modle-contain {
  width: 703rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 26rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  margin: 0 auto;
}

.contain {
  width: 100%;
  font-size: 28rpx;
  font-weight: bold;
  color: rgba(25, 25, 25, 1);
  padding-left: 23rpx;
  line-height: 75rpx;
  border-bottom: 1rpx solid #f2f2f2;
}

.item-top {
  position: relative;
}

.item {
  display: flex;
  /* flex-flow: row nowrap; */
  align-items: center;
  padding: 0;
  margin-left: 23rpx;
  /* border-radius: 0; *//* background: #fff; */
  height: 90rpx;
  border-bottom: 1rpx solid #f2f2f2;
}

.item::after {
  border: 0;
}

.itemHover {
  background: #f8f8f8;
}

.item-top .img, .item .img {
  display: block;
  width: 62rpx;
  height: 62rpx;
  margin: auto;
  margin-top: 30rpx;
  margin-bottom: 20rpx;
}

.item-top .txt, .item .txt {
  display: block;
  font-size: 29rpx;
  color: #4f4f4f;
  flex-grow: 1;
  text-align: left;
}

.item-top .txt {
  text-align: center;
}

.item .txt2 {
  font-size: 26rpx;
  color: #999;
  flex-grow: 0;
}

.item .spot {
  display: flex;
  width: 16rpx;
  height: 16rpx;
  background: #f00;
  border-radius: 50%;
}

.item .tip {
  font-size: 24rpx;
  color: #999;
}

.goToImg {
  width: 26rpx;
  height: 26rpx;
  padding: 0 20rpx 0 6rpx;
}

.line {
  width: 100%;
  height: 20rpx;
  background: #f2f2f2;
}

.mine-get {
  font-size: 28rpx;
  color: #202020;
  border: 1rpx #ffd100 solid;
  border-radius: 25rpx;
  background: #ffd100;
  height: 50rpx;
  line-height: 50rpx;
  padding: 0 20rpx;
}

.mine-get:after {
  border: none;
}

.dian {
  width: 30rpx;
  height: 30rpx;
  background: rgba(230, 0, 18, 1);
  border: 1rpx solid rgba(255, 0, 0, 1);
  border-radius: 50%;
  font-size: 24rpx;
  line-height: 30rpx;
  text-align: center;
  color: #fff;
  position: absolute;
  top: 0;
  right: 50rpx;
}

.bottom {
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: center;
  /* position: absolute; */
  width: 100%;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  /* bottom: 30rpx; */
}

.share {
  font-size: 26rpx;
  color: #4877bd;
  padding: 20rpx;
}

.audit_realnameState {
  width: 131rpx;
  height: 44rpx;
  border: 2rpx solid rgba(255, 209, 0, 1);
  border-radius: 7px;
  margin-left: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.audit_realnameState image {
  width: 20rpx;
  height: 21rpx;
  margin-right: 8rpx;
}

.audit_realnameState text {
  display: block;
  font-size: 24rpx;
  color: #ffd100;
}

.but-text {
  display: block;
  font-size: 24rpx;
  color: #fff;
  line-height: 34rpx;
}

