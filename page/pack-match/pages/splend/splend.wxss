@import "../../../../my-template/load/listTemplate.wxss";

.page {
  position: relative;
}

.pageTip {
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.sport-video>view {
  width: 100%;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.sport-video-contain>view:last-child {
  display: block;
  width: 100%;
}

.sport-video .sport-video-child {
  width: 49.6%;
}

.sport-video-child image {
  width: 100%;
  height: 210rpx;
}

.sport-video-child view {
  font-size: 30rpx;
  text-align: left;
  color: rgba(0, 0, 0, 1);
  line-height: 36rpx;
  margin: 10rpx 19rpx 49rpx 19rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
