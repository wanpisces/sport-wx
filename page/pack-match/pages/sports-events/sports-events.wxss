/* page/pack-match/pages/sports-events/sports-events.wxss */
@import "/my-template/sports-events/sports-events.wxss";
@import "/my-template/load/listTemplate.wxss";
@import '/libs/icon.wxss';

.navigation-bar {
  position: fixed;
  width: 100%;
  top: 0;
}

.view-module {
  position: fixed;
  display: flex;
  flex-flow: column;
  width: 100%;
}

.tab {
  display: flex;
  flex-flow: row nowrap;
  margin: 30rpx;
  height: 64rpx;
  border-radius: 8rpx;
  border: 1px solid #202020;
  box-sizing: border-box;
}

.tab .sub {
  width: 50%;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: center;
  background: #fff;
}

.tab .sub image {
  width: 26rpx;
  height: 26rpx;
  margin-right: 8rpx;
}

.tab .sub  text {
  font-size: 32rpx;
  color: #353535;
}

.tab .subed {
  background: #202020;
}

.tab .subed text {
  color: #fff;
}

.tab1, .tab2 {
  display: flex;
  flex-flow: column;
  align-items: center;
}

.tab1 .label, .tab2 .label3 {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
}

.tab1 .label .sub {
  font-size: 32rpx;
  color: #999;
  line-height: 60rpx;
  padding: 0rpx 30rpx;
  display: flex;
  flex-flow: column;
  align-items: center;
}

.tab2 .label3 .sub {
  font-size: 32rpx;
  color: #999;
  line-height: 60rpx;
  padding: 0rpx 30rpx;
  display: flex;
  flex-flow: column;
  width: 25%;
  align-items: center;
}

.tab1 .label .subed, .tab2 .label3 .subed {
  color: #202020;
}

.tab1 .label .sub2 {
  width: 1px;
  height: 60rpx;
  background: #f2f2f2;
}

.tab1 .label .sub .line, .tab2 .label3 .sub .line {
  width: 60rpx;
  height: 6rpx;
  background: #fff;
  border-radius: 3rpx;
}

.tab1 .label .sub .lineed, .tab2 .label3 .sub .lineed {
  background: #ffd100;
}

.label2 {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  margin-top: 20rpx;
  width: 740rpx;
  padding-left: 10rpx;
}

.label2-item {
  height: 52rpx;
  margin: 0px 10rpx;
  padding: 0 26rpx;
  border-radius: 26px;
  color: #999;
  line-height: 52rpx;
  font-size: 28rpx;
  text-align: center;
  flex-grow: 0;
  flex-shrink: 0;
}

.label2-item-ed {
  background: #ffd100;
  color: #353535;
}

.group {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
  width: 690rpx;
  height: 52rpx;
  margin: 20rpx 0;
}

.group .sub1, .group .sub3 {
  font-size: 26rpx;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  line-height: 52rpx;
  text-align: center;
}

.group .sub1 .triangle-left {
  width: 0;
  height: 0;
  border-top: 14rpx solid transparent;
  border-right: 20rpx solid #999;
  border-bottom: 14rpx solid transparent;
  margin-right: 10rpx;
}

.group .sub2 {
  font-size: 26rpx;
  color: #353535;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  line-height: 52rpx;
  text-align: center;
  border: 1px solid #202020;
  border-radius: 10rpx;
}

.group .sub2 .group-name {
  width: 140rpx;
  border-right: 1px solid #202020;
}

.group .sub2 .triangle {
  width: 50rpx;
  display: flex;
  flex-flow: column;
  align-items: center;
}

.group .sub2 .triangle .triangle-down {
  width: 0;
  height: 0;
  border-left: 14rpx solid transparent;
  border-right: 14rpx solid transparent;
  border-top: 16rpx solid #202020;
}

.triangle-down-pick {
  width: 0;
  height: 0;
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
  border-top: 16rpx solid #202020;
  margin-left: 12rpx;
}

.group .sub3 .triangle-right {
  width: 0;
  height: 0;
  border-top: 14rpx solid transparent;
  border-left: 20rpx solid #999;
  border-bottom: 14rpx solid transparent;
  margin-left: 10rpx;
}

.tip {
  width: 100%;
  height: 80rpx;
  background: #ffdd8c;
  padding: 0 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
}

.tip-item {
  color: #ff731e;
  line-height: 30rpx;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: box;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.swiper-view {
  position: fixed;
  width: 100%;
}

.empty-view {
  background-color: #fff;
  margin: 30rpx;
  display: flex;
  flex-flow: column;
  align-items: center;
  justify-content: center;
}
