@import '/libs/icon.wxss';

.image-bg {
  width: 100%;
  height: 152rpx;
  background-color: #fed946;
  border-radius: 0 0 40rpx 40rpx;
}

.userInfo {
  position: absolute;
  top: 86rpx;
  left: 50%;
  transform: translateX(-50%);
}

.match-userInfo {
  width: 50%;
  height: 152rpx;
  display: flex;
  align-items: flex-start;
  position: absolute;
  top: 0;
  left: 60rpx;
}

.match-userInfo image {
  width: 73rpx;
  height: 73rpx;
  margin-right: 20rpx;
}

.match-userInfo view {
  font-size: 50rpx;
  color: #353535;
  font-weight: bold;
}

.image-ataver {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
}

.ataver-text {
  font-size: 24rpx;
  color: #999;
  text-align: center;
}

.userInfo-detail {
  margin: 15rpx 75rpx;
  display: flex;
  align-items: center;
}

.userInfo-sign {
  color: #feb800;
  width: 3%;
}

.userInfo-space {
  width: 96%;
  padding: 20rpx 0;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #f2f2f2;
}

.special {
  margin-left: 3%;
}

.userInfo-space view {
  width: 20%;
  font-size: 34rpx;
  font-weight: 600;
}

.userInfo-space input {
  width: 80%;
  font-size: 30rpx;
  font-weight: normal;
  color: #353535;
}

.userInfo-submit {
  width: 450rpx;
  height: 90rpx;
  background: linear-gradient(90deg, rgba(255, 209, 0, 1) 0%, rgba(255, 174, 0, 1) 100%);
  box-shadow: 0px 3rpx 16rpx rgba(179, 33, 36, 0.24);
  border-radius: 45rpx;
  margin: 0 auto;
  margin-top: 45rpx;
  line-height: 90rpx;
  font-size: 35rpx;
  color: #222;
  font-weight: 600;
}

/* 修改单选框的样式 */

.radio-group {
  width: 55%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

radio .wx-radio-input {
  border-radius: 50%;
  width: 30rpx;
  height: 30rpx;
}

.radio {
  font-size: 32rpx;
  color: #353535;
}

.radio-select {
  font-size: 32rpx;
  color: #feb800;
}

.userInfo-space .user-picker {
  width: 100%;
  display: flex;
  align-items: center;
}

.userInfo-space .userInfo-space-picker {
  font-size: 32rpx;
  font-weight: normal;
  width: 95%;
}
