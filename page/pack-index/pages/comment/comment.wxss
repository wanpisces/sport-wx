/* page/pack-index/pages/comment/comment.wxss */

.pages {
  position: relative;
}

.navigationBar {
  position: fixed;
  width: 100%;
  top: 0;
  left: 0;
  opacity: 1;
  z-index: 1000;
}

.v1 {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}

.bg {
  width: 750rpx;
  height: 600rpx;
}

.data_view {
  position: absolute;
  width: 100%;
  height: auto;
  top: 65px;
  left: 0;
  z-index: 2;
  display: flex;
  flex-flow: column;
  justify-content: flex-start;
  align-items: center;
  background: #fff;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}


.input-txt textarea {
  margin: 20rpx;
  
  width: 700rpx;
  padding: 20rpx;
  height: 330rpx;
  border: 1rpx solid #f2f2f2;
  box-sizing: border-box;
}
.holder {
  font-size: 30rpx;
  color: #999;
}

.onBottom {
  display: flex;
  flex-flow: row nowrap;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 90rpx;
}

.fabiao {
  background: #ffd100;
  width: 100%;
  line-height: 90rpx;
  text-align: center;
  color: #282828;
  font-size: 32rpx;
  font-weight: bold;
}

.onBottom authorizeView {
  width: 66.7%;
  height: 90rpx;
}

.cancel {
  width: 33.3%;
  line-height: 90rpx;
  background: #999;
  color: #fff;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
}
