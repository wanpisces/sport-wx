<!--page/pack-index/pages/announcements/announcements.wxml-->
<view class='pages'>
  <navigationBar class='navigationBar' title-name="发布公告" tag="{{3}}" status-bar-height="{{statusBarHeight}}" />
  <view class='data_view' style="top:{{statusBarHeight+45}}px;">
    <view style='width:100%;height:1rpx;background:#e1e1e1;border-radius:10rpx;'></view>
    <view class='input-txt'>
      <textarea bindinput="bindinput" name='textarea' maxlength='500' placeholder-class='holder' placeholder='请输入你的公告'></textarea>
    </view>
    <authorizeView bind:onBut="submit" >
      <view class='submit' form-type='submit' hover-class='none'>发布</view>
    </authorizeView>
  </view>
</view>