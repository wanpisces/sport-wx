/* page/pack-index/pages/personal-dynamics/personal-dynamics.wxss */
@import "/my-template/comment/comment.wxss";
@import "/my-template/load/listTemplate.wxss";

.pages {
  position: relative;
}

.navigationBar {
  position: fixed;
  width: 100%;
  top: 0;
  left: 0;
  opacity: 1;
  z-index: 1000;
}

.v1 {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}

.data_view {
  position: absolute;
  width: 100%;
  height: auto;
  top: 65px;
  left: 0;
  z-index: 2;
  display: flex;
  flex-flow: column;
  justify-content: flex-start;
  align-items: center;
  background: #fff;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  padding-bottom: 50px;
}

.shuoshuo {
  display: flex;
  flex-flow: column;
  background: #fff;
  width: 750rpx;
  padding: 30rpx 20rpx 10rpx 20rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #f2f2f2;
}

.shuoshuo .ss_userInfo {
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-start;
  align-items: center;
  width: 100%;
}

.u_logo {
  height: 90rpx;
  width: 90rpx;
  position: relative;
  flex-grow: 0;
  flex-shrink: 0;
}

.ss_userInfo_logo {
  position: absolute;
  left: 0;
  top: 0;
  height: 90rpx;
  width: 90rpx;
  border-radius: 45rpx;
  border: 1rpx solid #f2f2f2;
}

.ss_userInfo_sex {
  position: absolute;
  right: -10rpx;
  top: 0;
  padding: 8rpx;
  height: 20rpx;
  width: 20rpx;
  border-radius: 18rpx;
}

.ss_userName {
  display: flex;
  flex-flow: column;
  margin-left: 20rpx;
  flex-grow: 1;
  flex-shrink: 1;
}

.ss_userName .c_ss_userName1 {
  display: block;
  font-size: 30rpx;
  color: #353535;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.ss_userName .c_ss_userName2 {
  display: flex;
  flex-flow: row nowrap;
  align-items: flex-end;
}

.ss_userName .c_ss_userName2 text {
  margin-top: 6rpx;
  font-size: 26rpx;
  color: #999;
}

.ss_userName .c_ss_userName2 image {
  width: 28rpx;
  height: 28rpx;
  border-radius: 0;
  margin-left: 48rpx;
  margin-bottom: 4rpx;
}

.delete {
  font-size: 28rpx;
  color: #228abf;
  padding: 0 30rpx;
}

