/* page/pack-index/pages/improve-personal-information/information.wxss */

.pages {
  position: relative;
}

.navigationBar {
  position: fixed;
  width: 100%;
  top: 0;
  left: 0;
  opacity: 1;
  z-index: 1000;
}

.v1 {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}

.bg {
  width: 750rpx;
  height: 600rpx;
}

.data_view {
  position: absolute;
  width: 100%;
  height: auto;
  left: 0;
  z-index: 2;
  display: flex;
  flex-flow: column;
  justify-content: flex-start;
  align-items: center;
  background: #fff;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}

.notice {
  width: 97%;
  line-height: 90rpx;
  background: #ffdd8c;
  color: #ff731e;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  /* padding: 0rpx 25rpx; */
  padding-left: 3%;
}

.item {
  margin: 0 20rpx;
  display: flex;
  flex-flow: column;
  width: 710rpx;
}

.name {
  width: 100%;
  font-size: 34rpx;
  line-height: 90rpx;
  color: #000;
}

.item .c_item {
  width: 100%;
  display: flex;
  flex-flow: row nowrap;
  border-bottom: 2rpx solid #f2f2f2;
  line-height: 90rpx;
  align-items: center;
}

.item .c_item input {
  width: 100%;
  height: 100%;
  font-size: 28rpx;
  color: #353535;
}

.item .c_item .inputPlaceholder {
  font-size: 28rpx;
  color: #999;
}

.item .c_item .tip {
  font-size: 28rpx;
  color: #353535;
}

.item picker {
  width: 100%;
  line-height: 90rpx;
  border-bottom: 2rpx solid #f2f2f2;
}

.item .picker {
  font-size: 28rpx;
  color: #353535;
  line-height: 60rpx;
  width: 100%;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
}

.item .picker_no {
  font-size: 28rpx;
  color: #999;
  width: 100%;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
}

.item .picker_no .arrow, .item .picker .arrow {
  width: 36rpx;
  height: 36rpx;
}

.arrow {
  width: 36rpx;
  height: 36rpx;
}

.next {
  line-height: 90rpx;
  border-radius: 45rpx;
  background: -webkit-linear-gradient(left, #ffd100, #ffae00);
  color: #222;
  font-weight: bolder;
  font-size: 35rpx;
  margin: 80rpx 0rpx;
  padding: 0rpx 150rpx;
  box-shadow: 0rpx 0rpx 16rpx rgba(179, 33, 36, 0.24);
}
